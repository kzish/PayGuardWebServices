@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">

            <form action="~/Banks/CreateBank" method="post" style="width:80%;margin:auto;">

                <h2>Create Bank</h2>

                <div class="form-group">
                    <input type="text" class="form-control" name="BankName" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>BankName</small>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="SwiftCode" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>SwiftCode</small>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="EndPoint" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>EndPoint</small>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>


        </div>
    </div>
</div>

