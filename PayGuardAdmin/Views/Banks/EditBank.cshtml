@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var bank = (PayGuardAdmin.Models.MBank)ViewBag.bank;
}


<div class="container">
    <div class="row">
        <div class="col-md-12">

            <form action="~/Banks/EditBank" method="post" style="width:80%;margin:auto;">

                <h2>Edit Bank</h2>
                <input type="hidden" value="@bank.Id" name="Id" />
                <div class="form-group">
                    <input type="text" class="form-control" name="BankName" value="@bank.BankName" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>BankName</small>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="SwiftCode" value="@bank.SwiftCode" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>SwiftCode</small>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="EndPoint" value="@bank.EndPoint" required>
                    <small class="form-text text-muted"><span style="color:red;">*</span>EndPoint</small>
                </div>
                <div class="form-group">
                    <select class="form-control" name="Online">
                        <option value="true" selected="@(bank.Online)">Online</option>
                        <option value="false" selected="@(!bank.Online)">Offline</option>
                    </select>
                    <small class="form-text text-muted"><span style="color:red;">*</span>Online</small>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>


        </div>
    </div>
</div>

