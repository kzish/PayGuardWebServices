@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style>
    label {
        color: red;
    }
</style>

<div class="login_page.">
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="~/Account/ChangePassword" id="f1" style="width:50%;margin:auto;">

                <div class="form-group">
                    <input type="password" class="form-control" placeholder="..." name="old_password" value="" required>
                    <small>Old Password</small>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" placeholder="..." name="new_password" id="new_password" value="" required>
                    <small>New Password</small>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" placeholder="..." name="confirm_password" id="confirm_password" value="" required>
                    <small>Confirm new password</small>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>

                <center>
                    <span style="color:red;">@TempData["msg"]</span>
                </center>


            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#f1").validate({
            rules: {
                new_password: "required",
                "confirm_password": {
                    equalTo: "#new_password"
                }
            }
        });
    });
</script>