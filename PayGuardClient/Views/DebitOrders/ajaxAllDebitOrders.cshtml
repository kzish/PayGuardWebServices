@{
    var debit_orders = (List<PayGuardClient.Models.MDebitOrders>)ViewBag.debit_orders;
}
<style>
    @*style the drop down select entries - datatables*@
    .custom-select
    {
        height:30px!important;
        width:50px!important;
        margin-left:5px!important;
    }
    @*style the copy buttons- datatables*@
    .dt-buttons
    {
        margin-left:4px!important;
    }
</style>



<table id="dt" class="table tblsm">
    <thead>
        <tr>
            <th>Date</th>
            <th>Reference</th>
            <th>Submitted</th>
            <th>Records</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in debit_orders)
        {
            <tr>
                <td title="@item.Date.ToString("d MMM yyyy")">@item.Date.ToString("d MMM yyyy")</td>
                <td title="@item.Reference">@item.Reference</td>
                <td title="@item.DateLastSubmitted?.ToString("d MMM yyyy")">@item.DateLastSubmitted?.ToString("d MMM yyyy")</td>
                <td title="@item.MDebitOrdersClients.Count">(@item.MDebitOrdersClients.Count)</td>
                <td title="@item.MDebitOrdersClients.Sum(i=>i.ClientAmount).ToString("0.00")">@item.MDebitOrdersClients.Sum(i => i.ClientAmount).ToString("0.00")</td>
                <td>
                    @if (item.DateLastSubmitted != null)
                    {
                        <a href="javascript:void(0);" style="color:black;">
                            Submitted
                        </a>
                    }
                    else
                    {
                        @if (item.MDebitOrdersClients.Count > 0)
                        {
                            <a href="javascript:void(0);" style="color:red;" onclick="confirm_submit('@item.Id')">
                                Submit
                            </a>
                        }
                    }
                    |
                    <a href="~/DebitOrders/EditDebitOrders/@item.Id" style="color:blue;">
                        Open
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<form action="~/DebitOrders/SubmitDebitOrder" method="post" id="submit_form">
    <input type="hidden" value="" name="debit_order_id" id="debit_order_id" />
</form>

<script>

    $('#dt').DataTable({
        select: true,
        responsive: true,
        dom: 'lBfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    });


    function confirm_submit(id) {
        $.confirm({
            title: 'Information',
            type: "red",
            content: 'Submit Debit Order?',
            buttons: {
                Yes: function () {
                    $("#debit_order_id").val(id);
                    $("#submit_form").submit();
                },
                No: function () {
                },

            }
        });

    }

</script>