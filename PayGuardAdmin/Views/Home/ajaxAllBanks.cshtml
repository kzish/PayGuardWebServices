@{
    var banks = (List<PayGuardAdmin.Models.MBank>)ViewBag.banks;
}
<style>
    @*style the drop down select entries - datatables*@
    .custom-select
    {
        height:30px!important;
        width:50px!important;
        margin-left:5px!important;
    }
    @*style the copy buttons- datatables*@
    .dt-buttons
    {
        margin-left:4px!important;
    }
</style>



<table id="dt_" class="table tblsm">
    <thead>
        <tr>
            <th>BankName</th>
            <th>Online</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in banks)
        {
            <tr>
                <td title="@item.BankName">@item.BankName</td>
                @if (item.Online)
                {
                    <td>
                        <img src="~/assets/img/online_icon.png" height="25" width="25" />
                    </td>
                }
                else
                {
                    <td>
                        <img src="~/assets/img/offline_icon.png" height="25" width="25" />
                    </td>
                }

            </tr>
        }
    </tbody>
</table>

<script>
    $('#dt_').DataTable({
        select: true,
        responsive: true,
        dom: 'lBfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    });
</script>